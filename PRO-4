#include <iostream>
using namespace std;

int main()
{
    int n;

    cout << "Enter the number of elements in the array: ";
    cin >> n;

    int arr[n];

    cout << "Enter " << n << " elements: ";
    for (int i = 0; i < n; i++)
    {
        cin >> arr[i];
    }

    cout << "Negative elements in the array are: ";
    int count = 0;

    for (int i = 0; i < n; i++)
    {
        if (arr[i] < 0)
        {
            cout << arr[i] << " ";
            count++;
        }
    }
    
    if (count == 0)
    {
        cout << "No negative elements found.";
    }

    return 0;
}
